    <ValidationSummary />

    <InputDate @bind-Value="tODOList.CreationDate" class="has-validation" />
    <InputText @bind-Value="tODOList.Name" placeholder="Задача" class="has-validation" />
        <button type="submit">Сохранить</button>

</EditForm>

<TodoLists/>
</div>
